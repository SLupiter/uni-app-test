            }
            
        },
        {
            "path" : "pages/result/test",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        },
        {
            "path" : "pages/mine/about",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "关于",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "说文解字",
		//"navigationBarBackgroundColor" : "black",
		"navigationBarBackgroundColor" : "#129d5c",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"borderStyle": "black",
		"backgroundColor": "#333",
		"color": "#8F8F94",
		"selectedColor": "white",
		"list": [{
				"pagePath": "pages/tabbar/tabbar-1/tabbar-1",
				"iconPath": "static/img/tabbar/1a.png",
				"selectedIconPath": "static/img/tabbar/1b.png",
